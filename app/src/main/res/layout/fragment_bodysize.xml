<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BodysizeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!--essential_info 시작-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/essential_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <!--essential_info_1 시작-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/essential_info_1"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/essential_info_height"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="키"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/bodysizeeditbox"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/essential_info_height"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="180"
                                android:textSize="24sp"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="3"
                                android:textAlignment="center"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cm"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--essential_info_1 끝-->

                    <!--essential_info_2 시작-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/essential_info_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/essential_info_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/essential_info_weight"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="몸무게"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/bodysizeeditbox"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/essential_info_weight"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="70"
                                android:textSize="24sp"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="3"
                                android:textAlignment="center"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="kg"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--essential_info_2 끝-->

                    <!--essential_info_3 시작-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/essential_info_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/essential_info_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/essential_info_foot"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="신발"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/bodysizeeditbox"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/essential_info_foot"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="240"
                                android:textSize="24sp"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="3"
                                android:textAlignment="center"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mm"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--essential_info_3 끝-->
                    <!--essential info 안에-->
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--essential info 닫힘-->

                <!--detail_info_title 시작-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detail_info_title_const"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/essential_info">
                    <TextView
                        android:id="@+id/detail_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="세부 신체 사이즈"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <ImageView
                        android:id="@+id/detail_info_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/detail_info_title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*선택사항"
                        app:layout_constraintTop_toBottomOf="@+id/detail_info_title"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--detail_info_title 끝-->

                <!--detail_info 시작-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detail_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/detail_info_title_const">

                    <!--detail_info_1 시작-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detail_info_1"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/detail_info_waist"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="허리"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/bodysizeeditbox"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/detail_info_waist"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="29"
                                android:textSize="24sp"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:textAlignment="center"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="in"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--detail_info_1 끝-->

                    <!--detail_info_2 시작-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detail_info_2"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/detail_info_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/detail_info_shoulder"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="어깨"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/bodysizeeditbox"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/detail_info_shoulder"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="50"
                                android:textSize="24sp"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:textAlignment="center"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cm"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--detail_info_2 끝-->

                    <!--detail_info_3 시작-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detail_info_3"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/detail_info_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/detail_info_inseam"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="인심길이"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/bodysizeeditbox"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/detail_info_inseam"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="75"
                                android:textSize="24sp"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:textAlignment="center"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cm"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--detail_info_3 끝-->


                    <!--detail_info_4 시작-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detail_info_4"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/detail_info_3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/detail_info_arm"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="팔길이"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/bodysizeeditbox"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/detail_info_arm"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="70"
                                android:textSize="24sp"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:textAlignment="center"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cm"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--detail_info_4 끝-->

                    <!--detail_info_5 시작-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/detail_info_5"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/detail_info_4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <TextView
                            android:id="@+id/detail_info_back"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="등길이"
                            android:textSize="24sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/bodysizeeditbox"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/detail_info_back"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="40"
                                android:textSize="24sp"
                                android:background="@null"
                                android:inputType="number"
                                android:maxLines="1"
                                android:maxLength="2"
                                android:textAlignment="center"
                                android:layout_marginStart="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cm"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--detail_info_5 끝-->


                </androidx.constraintlayout.widget.ConstraintLayout>
                <!--detail_info 끝-->


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bodysize_finish"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bodysizeeditbox">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="완료"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>